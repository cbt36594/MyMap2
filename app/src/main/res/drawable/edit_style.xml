<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="270"
                /><!-- 壓住時的背景  -->
            <stroke
                android:width="0dp"
                android:color="#000000" /> <!-- 壓住時的邊線  -->
            <corners
                android:radius="2dp" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="270"
                />
            <stroke
                android:width="0dp"
                android:color="#000000" /> <!-- 選中時的邊線  -->
            <corners
                android:radius="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="270"
                />
            <stroke
                android:width="0dp"
                android:color="#000000" /> <!-- 壓住未放開時的邊線 -->
            <corners
                android:radius="2dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <stroke
                android:width="0dp"
                android:color="#FFF123" />
            <corners
                android:radius="2dp" />
        </shape>
    </item>

    <item  android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="270"
                />
            <stroke
                android:width="0dp"
                android:color="#000000" /> <!-- 未壓時的邊線  -->
            <corners
                android:radius="2dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
        </shape>
    </item>

</selector>