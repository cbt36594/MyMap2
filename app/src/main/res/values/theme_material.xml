<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

<style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
</style>

<!-- 各API通用的基底theme -->
    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat">  <!--背景主題設定目前黑色-->
        <item name="android:windowNoTitle">true</item>
        <!-- 不需要 ActionBar 了,因為改用Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <!-- 主要顏色 -->
        <item name="colorPrimary">@color/color_accent</item>
        <!-- 狀態欄背景色 -->
        <item name="colorPrimaryDark">@color/md_dark_200</item>
        <item name="colorAccent">@color/md_red_700</item>
        <!-- 其他可用項目 colorControlNormal, colorControlActivated, colorControlHighlight, colorSwitchThumbNormal -->

    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">  <!--背景主題設定目前黑色-->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/color_accent</item>
        <item name="colorPrimaryDark">@color/md_dark_200</item>
        <item name="colorAccent">@color/md_red_700</item>
    </style>
</resources>